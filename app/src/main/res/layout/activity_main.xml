<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111112"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingStart="420dp"
        tools:layout_editor_absoluteX="471dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="108dp"
            android:layout_height="113dp"
            app:srcCompat="@drawable/movid" />

        <TextView
            android:layout_width="108dp"
            android:layout_height="16dp"
            android:fontFamily="sans-serif-black"
            android:scaleX="4.0"
            android:scaleY="4.0"
            android:text="movid"
            android:textColor="#FFFFFF"
            android:translationX="140dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="420dp"
        tools:layout_editor_absoluteY="168dp">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="?android:attr/listDivider"
            android:paddingStart="100dp"
            android:paddingTop="100dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:text="All available services"
            android:textColor="#FFFFFF"
            android:translationX="425dp"
            android:translationY="40dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/movieweb"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:backgroundTint="#151618"
                android:includeFontPadding="true"
                android:insetLeft="0dp"
                android:text="movie-web"
                android:textSize="20dp"
                android:translationX="100dp"
                android:translationY="90dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/red"
                app:iconPadding="9dp"
                app:iconSize="45dp"
                app:iconTint="#E91E63" />

            <Button
                android:id="@+id/vidbinge"
                android:layout_width="194dp"
                android:layout_height="84dp"
                android:backgroundTint="#151618"
                android:includeFontPadding="true"
                android:insetLeft="0dp"
                android:text="VidBinge"
                android:textSize="20dp"
                android:translationX="160dp"
                android:translationY="90dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/purple"
                app:iconPadding="3dp"
                app:iconSize="45dp"
                app:iconTint="#8A81FD" />

            <Button
                android:id="@+id/notmovieweb"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:backgroundTint="#151618"
                android:includeFontPadding="true"
                android:insetLeft="0dp"
                android:text="not-movie-web"
                android:textSize="20dp"
                android:translationX="220dp"
                android:translationY="90dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/red"
                app:iconPadding="9dp"
                app:iconSize="45dp"
                app:iconTint="#4CAF50" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#1D1D1D"
        tools:layout_editor_absoluteY="480dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textColor="#6F6F6F"
            android:textColorLink="#565656"
            android:translationX="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="github.com/basementgarbage"
            android:textColor="#6F6F6F"
            android:textColorLink="#565656"
            android:translationX="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>